# Next.js Application Configuration
NEXT_PUBLIC_APP_NAME="NextJS Starter"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_DESCRIPTION="A modern Next.js starter template"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
NEXT_PUBLIC_API_VERSION="v1"
API_TIMEOUT="10000"
API_RETRIES="3"

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/nextjs_starter"

# Authentication Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Feature Flags
NEXT_PUBLIC_ANALYTICS_ENABLED="false"
NEXT_PUBLIC_PWA_ENABLED="false"
NEXT_PUBLIC_DARK_MODE_ENABLED="true"
NEXT_PUBLIC_MULTI_LANGUAGE_ENABLED="false"
NEXT_PUBLIC_DEBUG_MODE="true"

# Performance Settings
NEXT_PUBLIC_LAZY_LOADING_ENABLED="true"
NEXT_PUBLIC_IMAGE_OPTIMIZATION_ENABLED="true"
NEXT_PUBLIC_CACHE_ENABLED="true"

# Security Settings
NEXT_PUBLIC_CSP_ENABLED="true"
NEXT_PUBLIC_HTTPS_ONLY="false"
NEXT_PUBLIC_SECURE_COOKIES="false"

# UI/UX Settings
NEXT_PUBLIC_THEME="light"
NEXT_PUBLIC_PRIMARY_COLOR="#3b82f6"
NEXT_PUBLIC_SECONDARY_COLOR="#64748b"
NEXT_PUBLIC_FONT_FAMILY="Inter"
NEXT_PUBLIC_ANIMATION_ENABLED="true"

# Development Settings
NEXT_PUBLIC_HOT_RELOAD_ENABLED="true"
NEXT_PUBLIC_SOURCE_MAPS_ENABLED="true"
NEXT_PUBLIC_CONSOLE_LOGS_ENABLED="true"
NEXT_PUBLIC_PERFORMANCE_MONITORING_ENABLED="true"

# API Rate Limiting
API_RATE_LIMIT_ENABLED="true"
API_RATE_LIMIT_MAX="100"
API_RATE_LIMIT_WINDOW="900000"

# CORS Configuration
API_CORS_ENABLED="true"
API_CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Monitoring & Analytics
NEXT_PUBLIC_ERROR_REPORTING_ENABLED="false"
NEXT_PUBLIC_PERFORMANCE_MONITORING_ENABLED="false"
